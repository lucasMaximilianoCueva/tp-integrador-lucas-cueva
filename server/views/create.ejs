<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Create Product - Tech Accessories Admin</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
  <link rel="stylesheet" href="/css/admin.css">
  <link rel="shortcut icon" href="/images/favicon.ico" type="image/x-icon">
</head>
<body>
  <div class="container-fluid">
    <div class="row">
      <!-- Sidebar -->
      <nav id="sidebar" class="col-md-3 col-lg-2 d-md-block bg-dark sidebar collapse">
        <div class="position-sticky pt-3">
          <div class="text-center mb-4">
            <i class="bi bi-tools display-4 text-light"></i>
            <h5 class="text-white mt-2">Tech Accessories</h5>
            <p class="text-muted">Admin Panel</p>
          </div>
          <ul class="nav flex-column">
            <li class="nav-item">
              <a class="nav-link" href="/admin/dashboard">
                <i class="bi bi-speedometer2 me-2"></i>
                Dashboard
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" href="/admin/products/create">
                <i class="bi bi-plus-circle me-2"></i>
                Add Product
              </a>
            </li>
            <li class="nav-item mt-5">
              <form action="/api/auth/logout" method="POST">
                <button type="submit" class="btn btn-outline-danger w-100">
                  <i class="bi bi-box-arrow-right me-2"></i>
                  Logout
                </button>
              </form>
            </li>
          </ul>
        </div>
      </nav>

      <!-- Main content -->
      <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
          <h1 class="h2">Create Product</h1>
          <div class="btn-toolbar mb-2 mb-md-0">
            <div class="btn-group me-2">
              <a href="/admin/dashboard" class="btn btn-sm btn-outline-secondary">
                <i class="bi bi-arrow-left me-1"></i>
                Back to Dashboard
              </a>
            </div>
          </div>
        </div>
<div class="row justify-content-center">
  <div class="col-md-8">
    <div class="card shadow">
      <div class="card-body p-4">
        <h4 class="card-title mb-4">Add New Product</h4>
        
        <% if (typeof error !== 'undefined') { %>
          <div class="alert alert-danger" role="alert">
            <%= error %>
          </div>
        <% } %>
        
        <form action="/admin/products/create" method="POST" enctype="multipart/form-data">
          <div class="mb-3">
            <label for="name" class="form-label">Product Name</label>
            <input type="text" class="form-control" id="name" name="name" required 
                   value="<%= typeof formData !== 'undefined' ? formData.name : '' %>">
          </div>
          
          <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea class="form-control" id="description" name="description" rows="4" required><%= typeof formData !== 'undefined' ? formData.description : '' %></textarea>
          </div>
          
          <div class="row mb-3">
            <div class="col-md-6">
              <label for="price" class="form-label">Price ($)</label>
              <input type="number" class="form-control" id="price" name="price" step="0.01" min="0" required
                     value="<%= typeof formData !== 'undefined' ? formData.price : '' %>">
            </div>
            
            <div class="col-md-6">
              <label for="category" class="form-label">Category</label>
              <select class="form-select" id="category" name="category" required>
                <option value="" disabled <%= typeof formData === 'undefined' ? 'selected' : '' %>>Select a category</option>
                <option value="phone" <%= typeof formData !== 'undefined' && formData.category === 'phone' ? 'selected' : '' %>>Phone Accessory</option>
                <option value="computer" <%= typeof formData !== 'undefined' && formData.category === 'computer' ? 'selected' : '' %>>Computer Accessory</option>
              </select>
            </div>
          </div>
          
          <div class="mb-4">
            <label for="image" class="form-label">Product Image</label>
            <input type="file" class="form-control" id="image" name="image" accept="image/*" required>
            <div class="form-text">Upload an image of the product (max 5MB)</div>
          </div>
          
          <div class="mb-3">
            <div class="row">
              <div class="col-6">
                <a href="/admin/dashboard" class="btn btn-outline-secondary w-100">
                  <i class="bi bi-arrow-left me-1"></i> Cancel
                </a>
              </div>
              <div class="col-6">
                <button type="submit" class="btn btn-primary w-100">
                  <i class="bi bi-plus-circle me-1"></i> Add Product
                </button>
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
      </main>
    </div>
  </div>

  <footer class="footer mt-auto py-3 bg-light">
    <div class="container text-center">
      <span class="text-muted">Tech Accessories Admin Panel</span>
    </div>
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
